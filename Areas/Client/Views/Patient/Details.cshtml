@using Clinc_Care_MVC_Grad_PROJ.Areas.Client.Models;
@model Clinc_Care_MVC_Grad_PROJ.Areas.Client.Models.Patient

@{
    ViewData["Title"] = "Details";
}
@{
    Layout = "_Layout2";
}
<body id="page-top">
    <div id="app">
        <div id="wrapper">
            
            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">

                    <div class="container-fluid">
                        <div class="row justify-content-center">
                            <div class="col">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-3 col-sm-6">
                                                <div class="card profile">
                                                    <div class="card-body">
                                                        <div class="text-center">
                                                            <img src="https://demo.getdoctorino.com/img/patient-icon.png" alt="" class="rounded-circle img-thumbnail avatar-xl">
                                                            <div class="online-circle">
                                                                <i class="fa fa-circle text-success"></i>
                                                            </div>
                                                            <h4 class="mt-2">@Model.PatientFullName</h4>

                                                            <a asp-action="Edit"  asp-route-id="@Model.PatientId" class="btn btn-danger btn-sm btn-round px-3">
                                                                <i class="fa fa-pen"></i>
                                                            </a>
                                                            <ul class="list-unstyled list-inline mt-3 text-muted">
                                                                <li class="list-inline-item font-size-13 me-3">
                                                                    <b class="text-dark">
                                                                        @{
                                                                            int totalAppointments =
                                                                            Model.Appointments.Where(App => App.PatientId == Model.PatientId).Count();
                                                                        }
                                                                        @totalAppointments
                                                                    </b>
                                                                    Appointments
                                                                </li>
                                                               
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- end card -->
                                                <div class="table-responsive mt-3">
                                                    <table class="table table-striped mb-0">
                                                        <tbody>
                                                            <tr>
                                                                <th scope="row">Contact No: </th>
                                                                <td> @Model.PatientPhone </td>
                                                            </tr>
                                                            <tr>
                                                                <th scope="row">E-mail:</th>
                                                                <td> @Model.PatientEmail </td>
                                                            </tr>
                                                            <tr>
                                                                <th scope="row">Age:</th>
                                                                <td>
                                                                    @{
                                                                        DateTime birthDate = DateTime.ParseExact(@Model.PatientBirthDate.Value.ToString("MM,dd,yyyy"), "MM,dd,yyyy", null);
                                                                        int age = DateTime.Now.Year - birthDate.Year;
                                                                    }
                                                                    @age
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <th scope="row">Gender:</th>
                                                                <td> @Model.PatientGender </td>
                                                            </tr>
                                                         
                                                          
                                                            <tr>
                                                                <th scope="row">Patient Type:</th>
                                                                <td> @Model.PatientTypeIdNavigation.PatientTypeName </td>
                                                            </tr>
                                                           
                                                          
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="col-md-9 col-sm-6">
                                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                                    <li class="nav-item" role="presentation">
                                                        <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="Profile" aria-selected="true">Appointments</a>
                                                    </li>
                                                    <li class="nav-item" role="presentation">
                                                        <a class="nav-link" id="documents-tab" data-toggle="tab" href="#documents" role="tab" aria-controls="documents" aria-selected="false">Lab</a>
                                                    </li>
                                                   
                                                    <li class="nav-item" role="presentation">
                                                        <a class="nav-link" id="prescriptions-tab" data-toggle="tab" href="#prescriptions" role="tab" aria-controls="prescriptions" aria-selected="false">Radiology</a>
                                                    </li>
                                                    <li class="nav-item" role="presentation">
                                                        <a class="nav-link" id="Medicine-tab" data-toggle="tab" href="#Medicine" role="tab" aria-controls="Medicine" aria-selected="false">Medicine</a>
                                                    </li>
                                                    <li class="nav-item" role="presentation">
                                                        <a class="nav-link" id="Billing-tab" data-toggle="tab" href="#Billing" role="tab" aria-controls="Billing" aria-selected="false">Payment History</a>
                                                    </li>
                                                </ul>
                                                <div class="tab-content" id="myTabContent">
                                                    <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                                        <div class="row my-4">
                                                            <div class="col">
                                                              
                                                                <table class="table mt-3">
                                                                    <thead class="text-center">
                                                                        <tr>
                                                                            <th>
                                                                                <label>ID</label>
                                                                            </th>
                                                                            <th>
                                                                                <label>Appointment Date</label>
                                                                            </th>
                                                                            <th>
                                                                                <label>Specialization</label>
                                                                            </th>
                                                                            <th>
                                                                                <label>Status</label>
                                                                            </th>

                                                                          
                                                                         
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var Appointment in Model.Appointments.Where(App => App.PatientId == Model.PatientId))
                                                                        {
                                                                        
                                                                            <tr>

                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => @Appointment.AppointmentId)
                                                                                </td>
                             
                                                                                <td class="text-center">
                                                                                    @{
                                                                                        var Date = Appointment.CreatedAppointmentDate.ToString("d/M/yyyy");
                                                                                    }
                                                                                    <label class="badge badge-primary-soft">
                                                                                        <i class="far fa-calendar-check"></i> @Html.DisplayFor(modelItem => Date)

                                                                                    </label>
                                                                                </td>

                                                                                <td class="text-center">
                                                                                    <label class="badge badge-primary-soft">
                                                                                         
                                                                                        @if (@Appointment.DoctorIdNavigation.IsDeleted == false)
                                                                                        {
                                                                                            <i class="fa-solid fa-heart-pulse fa-beat"> </i>

                                                                                            @Html.DisplayFor(modelItem => @Appointment.DoctorIdNavigation.EmpDoctorSpecilzations.SingleOrDefault().DoctorSpecilzationIdNavigation.SpecializationName )
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            <i class="fa-solid fa-heart-pulse fa-beat"> </i>

                                                                                            @Html.DisplayFor(modelItem =>@Appointment.DoctorIdNavigation.DeletedEmpDoctorSpecilzations.FirstOrDefault().DoctorSpecilzationIdNavigation.SpecializationName )
                                                                                        }
                                                                                    
                                                                                    
                                                                                    </label>
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @if (@Appointment.AppointmentState == AppointmentStates.reserverd)
                                                                                    {
                                                                                        <label class="badge badge-warning-soft">
                                                                                            <i class="fa-solid fa-user-clock"></i> @Html.DisplayFor(modelItem => @Appointment.AppointmentState)
                                                                                        </label>
                                                                                    }
                                                                                    
                                                                                    else if (@Appointment.AppointmentState == AppointmentStates.canceled)
                                                                                    {
                                                                                        <label class="badge badge-danger-soft">
                                                                                            <i class="fa-solid fa-user-xmark"></i> @Html.DisplayFor(modelItem => @Appointment.AppointmentState)
                                                                                        </label>
                                                                                    }
                                                                                   
                                                                                    else if (@Appointment.AppointmentState == AppointmentStates.treated)
                                                                                    {
                                                                                        <label class="badge badge-success-soft">
                                                                                            <i class="fa-solid fa-user-check"></i> @Html.DisplayFor(modelItem => @Appointment.AppointmentState)
                                                                                        </label>
                                                                                    }
                                                                                   
                                                                                </td>

                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                                <!-- end card -->
                                                            </div>
                                                        </div>
                                                      
                                                    </div>


                                                    <div class="tab-pane fade" id="documents" role="tabpanel" aria-labelledby="documents-tab">
                                                        <table class="table mt-3">
                                                            <tbody>
                                                                <tr class="text-center">
                                                                    <th >
                                                                        <label>LabOrder ID</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Appointment ID</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Lab Name</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Status</label>
                                                                    </th>
                                                                </tr>
                                                                @foreach (var Appointment in Model.Appointments)
                                                                {
                                                                    @foreach (var Patient in Appointment.LaboratoryOrders)
                                                                    {
                                                                        if (Patient != null)
                                                                        {
                                                                            <tr>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.LaboratoryOrderId)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.AppointmentId)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.LaboratoryTypeIdNavigation.LabName)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    <label class="badge badge-success-soft">
                                                                                        <i class="fa-solid fa-clipboard-check"></i> Received
                                                                                    </label>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                        else
                                                                        {
                                                                            <tr>
                                                                                <td colspan="4" class="text-center">
                                                                                    <img src="~/imgs/rest.png" width="200">
                                                                                    <br>
                                                                                    <br>
                                                                                    <b class="text-muted"> No Lab Records Found </b>
                                                                                </td>
                                                                            </tr>
                                                                            break;
                                                                        }
                                                                    }
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                    <div class="tab-pane fade" id="prescriptions" role="tabpanel" aria-labelledby="prescriptions-tab">

                                                        <table class="table mt-3">
                                                            <tbody>
                                                                <tr class="text-center">
                                                                    <th>
                                                                        <label>RadiologyOrder ID</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Appointment ID</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Radiology Name</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Status</label>
                                                                    </th>
                                                                </tr>
                                                                @foreach (var Appointment in Model.Appointments)
                                                                {
                                                                    @foreach (var Patient in Appointment.RadiologyOrders)
                                                                    {
                                                                        if (Patient != null)
                                                                        {
                                                                            <tr>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.RadiologyOrderId)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.AppointmentId)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.RadiologyTypeIdNavigation.RadiologyName)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    <label class="badge badge-success-soft">
                                                                                        <i class="fa-solid fa-clipboard-check"></i> Received
                                                                                    </label>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                        else
                                                                        {
                                                                            <tr>
                                                                                <td colspan="4" class="text-center">
                                                                                    <img src="~/imgs/rest.png" width="200">
                                                                                    <br>
                                                                                    <br>
                                                                                    <b class="text-muted"> No Radiology Records Found </b>
                                                                                </td>
                                                                            </tr>
                                                                            break;
                                                                        }
                                                                    }
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="tab-pane fade" id="Medicine" role="tabpanel" aria-labelledby="Medicine-tab">

                                                        <table class="table mt-3">
                                                            <tbody>
                                                                <tr class="text-center">
                                                                    <th>
                                                                        <label>Medicine ID</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Appointment ID</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Medicine Name</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Doseage</label>
                                                                    </th>
                                                                </tr>
                                                                @foreach (var Appointment in Model.Appointments)
                                                                {
                                                                    @foreach (var Patient in Appointment.MedicineOrders)
                                                                    {
                                                                        if (Patient != null)
                                                                        {
                                                                            <tr>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.MedicineId)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.AppointmentId)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.MedicineIdNavigation.MedicineName)
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    @Html.DisplayFor(modelItem => Patient.DosageIdNavigation.DosageName)
                                                                                </td>
                                                                               
                                                                            </tr>
                                                                        }
                                                                        else
                                                                        {
                                                                            <tr>
                                                                                <td colspan="4" class="text-center">
                                                                                    <img src="~/imgs/rest.png" width="200">
                                                                                    <br>
                                                                                    <br>
                                                                                    <b class="text-muted"> No Medicine Records Found </b>
                                                                                </td>
                                                                            </tr>
                                                                            break;
                                                                        }
                                                                    }
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="tab-pane fade" id="Billing" role="tabpanel" aria-labelledby="Billing-tab">
                                                        <div class="row mt-4">
                                                            <div class="col-lg-4 mb-4">
                                                                <div class="card bg-primary text-white shadow">
                                                                    <div class="card-body">
                                                                        Total Paid Amount
                                                                        <div class="text-white small">
                                                                            @{
                                                                                int Count = @Model.Appointments.Count();
                                                                                int Total = Count * 150;
                                                                            }
                                                                            @Total <i class="fa-solid fa-dollar-sign fa-flip fa-lg"></i>
                                                                            
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4 mb-4">
                                                                <div class="card bg-success text-white shadow">
                                                                    <div class="card-body">
                                                                        Already Paid
                                                                        <div class="text-white small">$0</div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4 mb-4">
                                                                <div class="card bg-danger text-white shadow">
                                                                    <div class="card-body">
                                                                        Due Balance
                                                                        <div class="text-white small">$0</div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                       
                                                        <table class="table mt-3">
                                                            <thead class="text-center">
                                                                <tr>
                                                                    <th>
                                                                        <label>ID</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Appointment Date</label>
                                                                    </th>
                                                                    <th>
                                                                        <label>Amount</label>
                                                                    </th>
 
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var Appointment in Model.Appointments.Where(App => App.PatientId == Model.PatientId))
                                                                {

                                                                    <tr>

                                                                        <td class="text-center">
                                                                            @Html.DisplayFor(modelItem => @Appointment.AppointmentId)
                                                                        </td>

                                                                        <td class="text-center">
                                                                            @{
                                                                                var Date = Appointment.CreatedAppointmentDate.ToString("d/M/yyyy");
                                                                            }
                                                                            <label class="badge badge-primary-soft">
                                                                                <i class="far fa-calendar-check"></i> @Html.DisplayFor(modelItem => Date)

                                                                            </label>
                                                                        </td>

                                                                       
                                                                        <td class="text-center">
                                                                            @if (@Appointment.AppointmentTypeIdNavigation.TypeName == "Booking")
                                                                            {
                                                                                <label class="badge badge-warning-soft">
                                                                                    <i class="fa-solid fa-dollar-sign fa-flip fa-lg"></i> 150 
                                                                                </label>
                                                                            }

                                                                            else
                                                                            {
                                                                                <label class="badge badge-success-soft">
                                                                                    <i class="fa-solid fa-dollar-sign fa-flip fa-lg"></i> 100 
                                                                                </label>
                                                                            }

                                                                        </td>

                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="NewDocumentModel" class="modal fade" style="display: none;" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add File / Note</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <form method="post" action="https://demo.getdoctorino.com/document/create" enctype="multipart/form-data">
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col">
                                                    <input type="text" class="form-control" name="title" placeholder="Title" required="">
                                                    <input type="hidden" name="patient_id" value="5">
                                                    <input type="hidden" name="_token" value="pnRcHu7OpZahIDwHoKyj01HsTHLgQALquhogmMYH">
                                                </div>
                                                <div class="col">
                                                    <input type="file" class="form-control-file" name="file" id="exampleFormControlFile1" required="">
                                                </div>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col">
                                                    <textarea class="form-control" name="note" placeholder="Note"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                                            <button class="btn btn-outline-primary" type="submit">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             
            </div>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select 'Delete' below if you are sure to proceed with the deletion</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-danger" id="delete_link">Delete</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://demo.getdoctorino.com/dashboard/vendor/jquery/jquery.min.js"></script>
    <script src="../assets/js/sb-admin-2.min.js"></script>
    <script src="https://demo.getdoctorino.com/dashboard/js/vue.js"></script>
    <script src="https://demo.getdoctorino.com/dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://demo.getdoctorino.com/dashboard/js/jquery.repeatable.js" type="text/javascript"></script>
    <script src="https://demo.getdoctorino.com/dashboard/js/gijgo.min.js" type="text/javascript"></script>
    <script src="https://demo.getdoctorino.com/dashboard/js/bootstrap-notify.min.js"></script>
    <script src="https://jasonday.github.io/printThis/printThis.js"></script>
    <script src="https://demo.getdoctorino.com/dashboard/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script>
        $(document).ready(function () {
            $('select').selectpicker();
        });
    </script>

</body>