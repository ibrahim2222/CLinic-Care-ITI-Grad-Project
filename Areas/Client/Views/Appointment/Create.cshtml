@model Clinc_Care_MVC_Grad_PROJ.Areas.Client.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="m-auto w-75">
    <div class="">
        <form asp-action="Create" class="m-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentTypeId" class="control-label"></label>
                <select asp-for="AppointmentTypeId" class="form-control" asp-items="ViewBag.AppointmentTypelist"></select>

            </div>
            <div class="form-group">
                <label asp-for="PaymentMathodId" class="control-label"></label>
                <select asp-for="PaymentMathodId" class="form-control" asp-items="ViewBag.PaymentMathodlist"></select>

            </div>
            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" class="form-control" required>

            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.Patientlist"></select>

            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.EmpDoctorSpecilzationlist"></select>

            </div>
            <div class="form-group">
                <label asp-for="ExaminationComment" class="control-label"></label>
                <input asp-for="ExaminationComment" class="form-control" />
                <span asp-validation-for="ExaminationComment" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCanceled" /> @Html.DisplayNameFor(model => model.IsCanceled)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPaid" /> @Html.DisplayNameFor(model => model.IsPaid)
                </label>
            </div>
            <div class="form-group d-flex aling-items-center justify-content-evenly">
                <input type="submit" value="Create" class="btn btn-primary me-3" /> |
                <a class="btn btn-outline-warning ms-3" asp-action="AllAppointment" asp-controller="HomeDashboard" asp-area="Managment">Back to List</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
