@model IEnumerable<Clinc_Care_MVC_Grad_PROJ.Areas.Managment.Models.LaboratoryOrder>
@inject Clinc_Care_MVC_Grad_PROJ.Models.UnitOfWork.IUnitOfWork UnitOfWork


@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_Layout2";
}
<h1 class="text-primary">Lab Request</h1>

<div class="card-body">
    <div class="table-responsive">
        <table class="table" id="dataTable" width="100%">
            <thead class="text-center">
                <tr>
                    <th>
                        <label>Appointment Date</label>
                    </th>
                    <th>
                        <label>Patient Name</label>
                    </th>

                   

                    <th><i class="fas fa-cog fa-spin"></i> Action </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in UnitOfWork.AppointmentRepository.GetAllAppointments())
                {

                    <tr>

                        <td class="text-center">
                            @item.AppointmentDate.ToString("yyyy-MM-dd")
                        </td>
                        <td class="text-center">
                            @*@{
                                var DRName = "Dr -" + item.AppointmentIdNavigation.DoctorIdNavigation.EmployeeFullName;
                            }*@
                            @Html.DisplayFor(modelItem => item.PatientIdNavigation.PatientFullName)

                        </td>

                       <td class="text-center">

                            @*<a asp-action="Create" asp-route-id="@item.AppointmentId" class="btn btn-outline-primary btn-sm"> <i class="fa-solid fa-bolt fa-flip"></i>Add </a>*@
                            <a href="#" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#AppointmentModal" data-appid="@item.AppointmentId">
                                <i class="fa-solid fa-eye fa-lg"></i>   
                            </a>
                            <button type="button" class="btn btn-outline-primary ms-2 open-LabRecords" data-toggle="modal" data-target="#LabOrdersModal" data-appid="@item.AppointmentId">
                                <i class="fa-solid fa-flask fa-fade" style="color: #952ea3;"></i> Show
                            </button>
                        </td>
                        @*-@item.AppointmentId*@
                    </tr>
                   
                }
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade bd-example-modal-lg" id="AppointmentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
           
        </div>
    </div>
</div>

<div class="modal fade" id="LabOrdersModal" tabindex="-1" >
    <div class="modal-dialog modal-dialog-centered modal-lg">

        <div class="modal-content">
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#AppointmentModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var appointmentId = button.data('appid');
            var modal = $(this);
            $.ajax({
                url: '@Url.Action("ResultFormModal", "LabRequest",new { area = "Managment" })',
                data: { id: appointmentId },
                type: 'GET',
                cache: false,
                success: function (result) {
                    modal.find('.modal-content').html(result);
                },
                error: function (error) {
                    console.error(error);
                }
            });
        });
    });

    $(document).ready(function () {
        $('#LabOrdersModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var appointmentId = button.data('appid');
            var modal = $(this);
            $.ajax({
                url: '@Url.Action("GetLabOrders", "Appointment",new { area = "Client" })',
                data: { id: appointmentId },
                type: 'GET',
                cache: false,
                success: function (result) {
                    modal.find('.modal-content').html(result);
                },
                error: function (error) {
                    console.error(error);
                }
            });
        });
    });
</script>
