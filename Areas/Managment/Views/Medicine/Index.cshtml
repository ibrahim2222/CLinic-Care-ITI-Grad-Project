@model IEnumerable<Clinc_Care_MVC_Grad_PROJ.Areas.Managment.Models.Medicine>

@{
    ViewData["Title"] = "Index";
}

<h1>Medicines</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicineDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicineId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MedicineId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
