<script>
    $(document).ready(function () {

        var isDoctor = localStorage.getItem('isDoctor');

        if (isDoctor === 'true') {
            $('#DoctorSpecializion').parent().show();
        } else {
            $('#DoctorSpecializion').parent().hide();
        }

        $('#EmployeeTypeId').change(function () {
            if ($(this).find(':selected').text().toLowerCase() == 'doctor') {
                $('#DoctorSpecializion').parent().show();
                localStorage.setItem('isDoctor', 'true');  // Save state to local storage
            } else {
                $('#DoctorSpecializion').parent().hide();
                localStorage.setItem('isDoctor', 'false');  // Save state to local storage
            }
        });
    });
</script>
