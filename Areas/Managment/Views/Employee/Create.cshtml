        if (EmpFirstName.value != "" && EmpPhone.value!= "")
        {
            EmpEmail.value = `${EmpFirstName.value}_${Math.floor((parseInt(2 + EmpPhone.value) / 250000) * 2)}@@roshetaclinic.org`
        }else{
            EmpEmail.value =''
        }
    }) 

    EmpFirstName.addEventListener("blur", () => {
        if (EmpFirstName.value != "" && EmpPhone.value != "")
        {
            EmpEmail.value = `${EmpFirstName.value}_${Math.floor((parseInt(2 + EmpPhone.value) / 250000) * 2)}@@roshetaclinic.org`
        }else{
